<link rel="stylesheet" href="css/log_page.css"/>
<div id="H5log_content">
	<div class="search_bar">
		<span class="icon_con"><img src="images/kuodajing.png"></span>
		<input type="text" id="keyword">
		<span class="clear_input">x</span>	
	</div>
	<div class="result_list">
		<ul class="levels">
			<li class="color_all" lev="6">ALL</li>
			<li class="color_debug" lev="0">DEBUG</li>
			<li class="color_info" lev="1">INFO</li>
			<li class="color_warn" lev="2">WARN</li>
			<li class="color_error" lev="3">ERROR</li>
		</ul>
		<dl>
		</dl>
	</div>
</div>

<script type="text/template" id="template_log_item">
	<% _.each(items, function(it) { %>
		<div style="display: none">
			<dt class="color_<%= LEVELS[it.lev] %>"><%- it.tag %></dt>
			<dd class="ellipsis_content3">
				<p class="log-page-time"><%
						var d = new Date(it.time);
						print(d.toLocaleDateString().replace(/[/]/g, '-') + ' ' + d.toTimeString().replace(/\s.+/g, ''));
					%></p>
				<p class="log-page-content"><%- it.content %></p>
			</dd>
		</div>
	<% }) %>
</script>
<script type="text/javascript" src="js/test/log_page.js"></script>